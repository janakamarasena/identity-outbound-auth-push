<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="org.wso2.carbon.identity.mobile.application.authenticator.wso2Verify.org.wso2.carbon.identity.mobile.wso2verify.AuthenticateActivity">
    <TextView
            android:id="@+id/text_view_main"
            android:layout_width="335dp"
            android:layout_height="134dp"
            android:layout_centerHorizontal="true"
            android:text="@string/textViewMain"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="30sp"
            android:layout_above="@+id/image_view_main" />

    <ImageView
            android:id="@+id/image_view_main"
            android:layout_width="167dp"
            android:layout_height="126dp"
            android:layout_centerInParent="true"
            app:srcCompat="@mipmap/ic_launcher_fingerprint"
            android:contentDescription="@string/image_of_a_fingerprint_in_main_activity" />

</RelativeLayout>